<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sqldatabasedemo.SqlDataBase">

    <EditText
        android:id="@+id/emp_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:hint="Enter the id"
        android:inputType="number"
        android:drawableStart="@drawable/baseline_perm_identity_24"
        android:drawablePadding="20dp"
        android:padding="20dp"
        />

    <EditText
        android:id="@+id/emp_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:drawableStart="@drawable/baseline_perm_identity_24"
        android:drawablePadding="20dp"
        android:hint="Enter the Name"
        android:inputType="textPersonName"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emp_id"
         />
    <EditText
        android:id="@+id/emp_salary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@id/emp_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:hint="Enter the salary"
        android:inputType="number"
        android:drawableStart="@drawable/baseline_attach_money_24"
        android:drawablePadding="20dp"
        android:padding="20dp"
        />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/emp_salary"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        />
    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="update"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/emp_salary"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toEndOf="@id/save"
        android:layout_marginStart="40dp"
        />
    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/save"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        />

    <Button
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/save"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toEndOf="@id/delete"
        android:layout_marginStart="40dp"
        />
    <Button
        android:id="@+id/show_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show All Data "
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/delete"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>